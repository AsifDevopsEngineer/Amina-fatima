apiVersion: apps/v1
kind: Deployment
metadata:
  name: nginx-deployment
  labels:
    app: nginx
spec:
  replicas: 2
  selector:
    matchLabels:
      app: nginx
  template:
    metadata:
      labels:
        app: nginx
    spec:
      containers:
      - name: nginx
        image: nginx:latest
        env:
         - name: DB-PORT
           valueFrom:
             configMapKeyRef:
               name: test-demo
               key: db-port
        ports:
        - containerPort: 80
